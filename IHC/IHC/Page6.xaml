<Page x:Class="IHC.AX_TriView"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:local="clr-namespace:IHC"
     mc:Ignorable="d"
     Title="AX_TriView"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal" 
     TextOptions.TextRenderingMode="Auto"        
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}" 
     d:DesignWidth="1366" 
     d:DesignHeight="768">
    <materialDesign:DrawerHost>
        <materialDesign:DrawerHost.LeftDrawerContent>
            <StackPanel Margin="16" Width="169">
                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }" Margin="4" HorizontalAlignment="Center">Menu</TextBlock>
                <Button Click="on_Calendar"
                        
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                    Calendar
                </Button>
                <Button Click="on_Schedule"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                    Schedule
                </Button>
                <Button Click="on_News"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                    News and Weather
                </Button>
                <Button Click="on_Todo"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                    To Do
                </Button>
                <Button Click="on_Email"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                    Email
                </Button>
                <Button Click="on_Profile"
                        Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Margin="4" HorizontalAlignment="Center"
                        Style="{DynamicResource MaterialDesignFlatButton}">
                    Profile
                </Button>
                
                
            </StackPanel>
        </materialDesign:DrawerHost.LeftDrawerContent>
        <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Grid.Row="0" Grid.ColumnSpan="3" Mode="PrimaryDark"  Padding="16">
            <DockPanel>
                <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges">
                    <ListBox>
                        <ListBoxItem>
                            <TextBlock MouseLeftButtonDown="Settings_MouseLeftButtonDown">
                                Settings
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock MouseLeftButtonDown="Logout_MouseLeftButtonDown">
                                Logout
                            </TextBlock>
                        </ListBoxItem>
                    </ListBox>
                </materialDesign:PopupBox>
                <StackPanel Orientation="Horizontal">
                        <ToggleButton Name="hamburguer" Style="{DynamicResource MaterialDesignHamburgerToggleButton}" Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
CommandParameter="{x:Static Dock.Left}" MouseLeave="ToggleButton_MouseLeave"/>
                    <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0">Agenda 20XX</TextBlock>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>


        <materialDesign:DialogHost Grid.Column="0" Grid.Row="1">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Orientation="Vertical" Margin="5 5 5 5">
                    <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }" Margin="5 5 5 5">Name:</TextBlock>
                        <TextBox Name="TextBox2" Margin="5 5 5 5"/>
                        <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }" Margin="5 5 5 5">Pick a Date:</TextBlock>
                    <DatePicker DisplayDate="{Binding DateTime.Now}"  Margin="5 5 5 5" />
                    <StackPanel Orientation="Horizontal">
                        <Button Style="{DynamicResource MaterialDesignRaisedDarkButton }" Margin="5 5 5 5" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">Cancelar</Button>
                        <Button Style="{DynamicResource MaterialDesignRaisedAccentButton }" Margin="5 5 5 5" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Click="createEvent">Criar</Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
            <materialDesign:Card x:Name="Calendar" Padding="5" Margin="10" VerticalAlignment="Stretch" materialDesign:ShadowAssist.ShadowDepth="Depth5" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                    Calendar
                </TextBlock>
                <ToggleButton x:Name="ToggleCalendar" Click="ToggleButton_ClickCalendar" Grid.Row="0" Style="{DynamicResource MaterialDesignSwitchDarkToggleButton}" Height="auto"  Width="auto" HorizontalAlignment="Right" Margin="10 10 10 10"/>


                <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                <ListBox Grid.Row="2" VerticalAlignment="Stretch">
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">May</TextBlock>
                                <TextBlock>16</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                Go to the Dentist
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">May</TextBlock>
                                <TextBlock>17</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                IHC Test
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">May</TextBlock>
                                <TextBlock>21</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                Go to the Doctor
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">May</TextBlock>
                                <TextBlock>12</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                BD Test
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">June</TextBlock>
                                <TextBlock>1</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card Name="event" Visibility="Collapsed">
                        <Grid Margin="10 10 10 10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">June</TextBlock>
                                <TextBlock>4</TextBlock>
                            </StackPanel>
                                    <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=Eventos}">
                                        Meet with the Boss
                                    </TextBlock>
                                </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">June</TextBlock>
                                <TextBlock>25</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                Freedom Day
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">July</TextBlock>
                                <TextBlock>1</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card>
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">July</TextBlock>
                                <TextBlock>5</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                Go to the Dentist
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                </ListBox>

                <Button Grid.Row="2" Style="{DynamicResource MaterialDesignFloatingActionButton }" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 20 20"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        >
                    <materialDesign:PackIcon Kind="Plus" Width="auto" Height="40"/>
                </Button>
            </Grid>
        
        </materialDesign:Card>
        </materialDesign:DialogHost>








        <materialDesign:Card x:Name="Schedule" Grid.Column="0" Grid.Row="1" Padding="5" Margin="10" VerticalAlignment="Stretch" materialDesign:ShadowAssist.ShadowDepth="Depth5" Visibility="Collapsed">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                    Schedule
                </TextBlock>
                <ToggleButton x:Name="ToggleSchedule" Click="ToggleButton_ClickSchedule" Grid.Row="0" Style="{DynamicResource MaterialDesignSwitchDarkToggleButton}" Height="auto"  Width="auto" HorizontalAlignment="Right" Margin="10 10 10 10" IsChecked="True"/>
                
                <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                <ListBox Grid.Row="2" VerticalAlignment="Stretch">
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">9:00</TextBlock>
                                <TextBlock>4.2.11</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                BD
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">10:00</TextBlock>
                                <TextBlock>4.2.11</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                BD
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">11:00</TextBlock>
                                <TextBlock>4.1.5.11</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                IHC
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card >
                        <Grid Margin="10 10 10 10" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="350"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }">12:00</TextBlock>
                                <TextBlock>4.1.5</TextBlock>
                            </StackPanel>
                            <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                IHC
                            </TextBlock>
                        </Grid>
                    </materialDesign:Card>
                </ListBox>
            </Grid>
        </materialDesign:Card>




        <materialDesign:DialogHost Grid.Column="1" Grid.Row="1">
            <materialDesign:DialogHost.DialogContent>
                <StackPanel Orientation="Vertical" Margin="5 5 5 5">
                    <TextBlock Style="{DynamicResource MaterialDesignBody2TextBlock }" Margin="5 5 5 5">Name:</TextBlock>
                        <TextBox Name="TextBox1" Margin="5 5 5 5"/>
                        <StackPanel Orientation="Horizontal">
                        <Button Style="{DynamicResource MaterialDesignRaisedDarkButton }" Margin="5 5 5 5" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">Cancelar</Button>
                        <Button Style="{DynamicResource MaterialDesignRaisedAccentButton }" Margin="5 5 5 5" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Click="createTodo">Create</Button>
                    </StackPanel>
                </StackPanel>
            </materialDesign:DialogHost.DialogContent>
            <materialDesign:Card x:Name="ToDo" Padding="5" Margin="10" VerticalAlignment="Stretch" materialDesign:ShadowAssist.ShadowDepth="Depth5" Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                    To do List
                    </TextBlock>
                    <ToggleButton IsChecked="True" x:Name="ToggleTodo" Click="ToggleButton_ClickTodo" Grid.Row="0" Style="{DynamicResource MaterialDesignSwitchDarkToggleButton}" Height="auto"  Width="auto" HorizontalAlignment="Right" Margin="10 10 10 10"/>


                    <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                    <ListBox Grid.Row="2" VerticalAlignment="Stretch">
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <CheckBox/>
                                </StackPanel>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                Finish Homework
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <CheckBox/>
                                </StackPanel>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                Clean Room
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card Name="TodoCard" Visibility="Collapsed">
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <CheckBox/>
                                </StackPanel>
                                    <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Path=Todo}">
                                        Buy Cat's Food
                                    </TextBlock>
                                </Grid>
                        </materialDesign:Card>
                    </ListBox>

                    <Button Grid.Row="2" Style="{DynamicResource MaterialDesignFloatingActionButton }" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 20 20"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        >
                        <materialDesign:PackIcon Kind="Plus" Width="auto" Height="40"/>
                    </Button>
                </Grid>

            </materialDesign:Card>
        </materialDesign:DialogHost>

        <materialDesign:Card Grid.Column="1" Grid.Row="1" x:Name="News" Padding="5" Margin="10" VerticalAlignment="Stretch" materialDesign:ShadowAssist.ShadowDepth="Depth5" Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                    News and Weather
                </TextBlock>
                <ToggleButton x:Name="ToggleNews" Click="ToggleButton_ClickNews" Grid.Row="0" Style="{DynamicResource MaterialDesignSwitchDarkToggleButton}" Height="auto"  Width="auto" HorizontalAlignment="Right" Margin="10 10 10 10"/>


                <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="130"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Center" Grid.ColumnSpan="3" Style="{DynamicResource MaterialDesignDisplay1TextBlock}" VerticalAlignment="Stretch">Aveiro, Portugal</TextBlock>
                    <materialDesign:PackIcon Grid.Row="1" Kind="WeatherCloudy" Height="80" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    
                        <ListBox  Grid.Row="1" Grid.Column="1">
                        <TextBlock TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Temperature : 23 ºC</TextBlock>
                        <TextBlock TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Precipitation : 0 %</TextBlock>
                        <TextBlock TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Humidity : 64 %</TextBlock>
                        <TextBlock TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Wind : 13 Km/h</TextBlock>

                    </ListBox>

                    <ListBox  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Row="1" Kind="Newspaper" Height="40" Width="Auto" HorizontalAlignment="left" VerticalAlignment="Center"/>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                    India's monsoon may escape El Nino unscathed-weather office
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Row="1" Kind="Newspaper" Height="40" Width="Auto" HorizontalAlignment="left" VerticalAlignment="Center"/>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                    Orange weather warning for seven Portuguese districts
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Row="1" Kind="Newspaper" Height="40" Width="Auto" HorizontalAlignment="left" VerticalAlignment="Center"/>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                    Mexico: Secret tunnel found in Reynosa prison
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Row="1" Kind="Newspaper" Height="40" Width="Auto" HorizontalAlignment="left" VerticalAlignment="Center"/>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                    Ransomware cyber-attack threat escalating - Europol
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                        <materialDesign:Card >
                            <Grid Margin="10 10 10 10" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="350"/>
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Grid.Row="1" Kind="Newspaper" Height="40" Width="Auto" HorizontalAlignment="left" VerticalAlignment="Center"/>
                                <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" TextWrapping="Wrap">
                                    Mafia controlled Italy migrant centre, say police
                                </TextBlock>
                            </Grid>
                        </materialDesign:Card>
                    </ListBox>

                </Grid>
                
            </Grid>

        </materialDesign:Card>






        <materialDesign:DialogHost Grid.Column="2" Grid.Row="1">
            <materialDesign:DialogHost.DialogContent>
                <Grid Margin="10 10 10 10" Width="372">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock  Style="{StaticResource MaterialDesignDisplay1TextBlock}" >New Email</TextBlock>
                    <TextBox x:Name="ToEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="1" Grid.ColumnSpan="2"    
                             >
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                <materialDesign:PackIcon Kind="Account" />
                                <TextBlock>To</TextBlock>
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
                    </TextBox>
                    <TextBox x:Name="ccEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="2" Grid.ColumnSpan="2"    
                             >
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                <materialDesign:PackIcon Kind="AccountMultiple" />
                                <TextBlock>cc</TextBlock>
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
                    </TextBox>
                    <TextBox x:Name="AssuntoEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="3" Grid.ColumnSpan="2"    
                             >
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                <materialDesign:PackIcon Kind="Email" />
                                <TextBlock>Subject</TextBlock>
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
                    </TextBox>
                    <TextBox x:Name="MailEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="4" Grid.ColumnSpan="2"
                        Height="169"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                             >
                        <materialDesign:HintAssist.Hint>
                            <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                <TextBlock>Body</TextBlock>
                            </StackPanel>
                        </materialDesign:HintAssist.Hint>
