            <materialDesign:DialogHost Name="ToDo" Grid.Column="0" Grid.Row="1" Visibility="Collapsed">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Margin="10 10 10 10" Name="DialogAddTodo" Width="250">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.ColumnSpan="2" Style="{DynamicResource MaterialDesignBody2TextBlock }" Margin="0 10 0 0">To Do:</TextBlock>
                        <TextBox Name="TodoText" Margin="0 10 0 0" Grid.ColumnSpan="2" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True"/>
                        <Button Margin="0 10 0 0" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Style="{DynamicResource MaterialDesignRaisedDarkButton }" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">Cancel</Button>
                        <Button Margin="0 10 0 0" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Style="{DynamicResource MaterialDesignRaisedAccentButton }" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Click="addTodo">Create</Button>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
                <materialDesign:Card Padding="5" Margin="10" VerticalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                            To do List
                        </TextBlock>
                        <Button x:Name="ToggleTodo" Click="ToggleButton_ClickTodo" Grid.Row="0" Style="{DynamicResource MaterialDesignRaisedButton}" Height="auto"  Width="auto" HorizontalAlignment="Right" Margin="10 10 16 10">
                            <materialDesign:PackIcon Kind="ArrangeSendBackward"/>
                        </Button>

                        <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                        <ListBox Name="todosListBox" SelectionMode="Multiple" Grid.Row="2" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10 10 10 10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="24"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox Grid.Column="0" Margin="0 0 5 0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}, Path=IsSelected}"/>
                                        <TextBlock Style="{DynamicResource MaterialDesignSubheadingTextBlock }" 
                                                       Grid.Column="1" TextWrapping="Wrap"
                                                       Text="{Binding Path=Text}" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Button Grid.Row="2" Style="{DynamicResource MaterialDesignFloatingActionDarkButton }" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 16 20"
                        Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}"
                        >
                            <materialDesign:PackIcon Kind="Plus" Width="auto" Height="40"/>
                        </Button>
                    </Grid>

                </materialDesign:Card>
            </materialDesign:DialogHost>




            <!--News and Weather-->
            <!--News and Weather-->
            <!--News and Weather-->
            <!--News and Weather-->
            <!--News and Weather-->
            <!--News and Weather-->
            <!--News and Weather-->
            
            <materialDesign:Card Grid.Column="1" Grid.Row="1" x:Name="News" Padding="5" Margin="10" VerticalAlignment="Stretch" Visibility="Visible">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                    Today
                    </TextBlock>
                    <Button x:Name="ToggleNews" Click="ToggleButton_ClickNews" Grid.Row="0" Style="{DynamicResource MaterialDesignRaisedButton}" Height="auto"  Width="auto" HorizontalAlignment="Right" Margin="10 10 16 10">
                        <materialDesign:PackIcon Kind="ArrangeBringForward"/>
                    </Button>

                    <Separator Grid.Row="1" Style="{StaticResource MaterialDesignDarkSeparator}"/>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="130"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Name="CityText" Grid.ColumnSpan="2" HorizontalAlignment="Center" Style="{DynamicResource MaterialDesignDisplay1TextBlock}" VerticalAlignment="Stretch">Unknow</TextBlock>
                        <!--<materialDesign:PackIcon Grid.Row="1" Kind="WeatherCloudy" Height="80" Width="Auto" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
                        <Image Grid.Row="1" Source="http://cdn.apixu.com/weather/64x64/day/116.png" x:Name="imageWeather" VerticalAlignment="Center" HorizontalAlignment="Center" Width="130" Height="130"/>

                        <ListBox  Grid.Row="1" Grid.Column="1">
                            <TextBlock Name="TempText" TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Temperature : Unknow</TextBlock>
                            <TextBlock Name="PrecText" TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Precipitation : Unknow</TextBlock>
                            <TextBlock Name="HumiText" TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Humidity : Unknow</TextBlock>
                            <TextBlock Name="WindText" TextWrapping="Wrap" Style="{DynamicResource MaterialDesignBody1TextBlock}" >Wind : Unknow</TextBlock>
                        </ListBox>

                        <ListBox SelectionChanged="newsListBox_SelectionChanged" Grid.Row="2" Grid.ColumnSpan="2" Name="newsListBox" HorizontalContentAlignment="Stretch">
                            <ListBox.ItemTemplate>
                                <DataTemplate>

                                    <materialDesign:Card>
                                        <Grid Margin="10 10 10 10" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Image Source="{Binding Path=Image}" Height="40" Width="Auto" HorizontalAlignment="center" VerticalAlignment="Center"/>
                                            <TextBlock Text ="{Binding Path=Text}" Padding="10"  Style="{DynamicResource MaterialDesignSubheadingTextBlock }" Grid.Column="1" MaxWidth="{Binding ActualWidth, ElementName=parentElementName}" TextWrapping="Wrap">
                                            </TextBlock>
                                        </Grid>
                                    </materialDesign:Card>


                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Grid>
            </materialDesign:Card>






            <materialDesign:DialogHost Grid.Column="2" Grid.Row="1">
                <materialDesign:DialogHost.DialogContent>
                    <Grid Margin="10 10 10 10" Width="372">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Style="{StaticResource MaterialDesignDisplay1TextBlock}" >New Email</TextBlock>
                        <TextBox x:Name="ToEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="1" Grid.ColumnSpan="2"    
                             >
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                    <materialDesign:PackIcon Kind="Account" />
                                    <TextBlock>To</TextBlock>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>
                        <TextBox x:Name="ccEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="2" Grid.ColumnSpan="2"    
                             >
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                    <materialDesign:PackIcon Kind="AccountMultiple" />
                                    <TextBlock>cc</TextBlock>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>
                        <TextBox x:Name="AssuntoEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="3" Grid.ColumnSpan="2"    
                             >
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                    <materialDesign:PackIcon Kind="Email" />
                                    <TextBlock>Subject</TextBlock>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>
                        <TextBox x:Name="MailEmail" Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                        Margin="0 20 0 0"
                        Grid.Row="4" Grid.ColumnSpan="2"
                        Height="169"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                             >
                            <materialDesign:HintAssist.Hint>
                                <StackPanel Orientation="Horizontal" Margin="-2 0 0 0">
                                    <TextBlock>Body</TextBlock>
                                </StackPanel>
                            </materialDesign:HintAssist.Hint>
                        </TextBox>

                        <Button Grid.Row="5" Style="{DynamicResource MaterialDesignRaisedDarkButton }" Margin="5 5 5 5" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">Cancel</Button>
                        <Button Grid.Row="5" Grid.Column="1" Style="{DynamicResource MaterialDesignRaisedAccentButton }" Margin="5 5 5 5" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}" Click="successAction">Send</Button>
                    </Grid>
                </materialDesign:DialogHost.DialogContent>
                <materialDesign:Card x:Name="Email" Padding="5" Margin="10" VerticalAlignment="Stretch" Visibility="Visible">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <TextBlock Style="{DynamicResource MaterialDesignDisplay1TextBlock }" VerticalAlignment="Center"  Margin="16 0 0 0" Grid.Row="0">
                    Inbox

                            </TextBlock>
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock }" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 30 0" Grid.Row="0">
                         Unread:
                            </TextBlock>
                            <TextBlock Style="{DynamicResource MaterialDesignTitleTextBlock }" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 5 0" Grid.Row="0">
                            2
                            </TextBlock>
